# App Database (PostgreSQL on AWS RDS)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:yourpassword@your-db.xxx.rds.amazonaws.com:5432/datai_app

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
DB_ENCRYPTION_KEY=your-fernet-key-here

# App Configuration
ENVIRONMENT=development
DEBUG=True

# Agent Configuration
AGENT_MAX_RETRIES=1
AGENT_TIMEOUT=30
SQL_ROW_LIMIT=10000
DASHBOARD_MAX_CHARTS=5


