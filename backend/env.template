# App Database
# SQLite (default - lightweight, no installation needed):
DATABASE_URL=sqlite:///./datai_app.db
# Or use PostgreSQL if you prefer:
# DATABASE_URL=postgresql://user:password@localhost:5432/datai_app

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
DB_ENCRYPTION_KEY=your-fernet-key-here

# App Configuration
ENVIRONMENT=development
DEBUG=True


